{erl_opts, [debug_info]}.
{deps, [
    {cowboy, "2.12.0"},
    {jsone, "1.9.0"},
    {epgsql, "4.7.1"}
]}.

{shell, [
    {config, "config/sys.config"},
    {apps, [devices_service]}
]}.

{relx, [
    {release, 
        {'devices_service', "1.0.0"}, 
        [
            'devices_service',
            sasl
        ]},
        {sys_config, "config/sys.config"},
        {dev_mode, true},
        {include_erts, false},
        {extended_start_script, true}
    ]}.

{profiles, [{prod, [{relx, [{dev_mode, false},
        {include_erts, true},
        {include_src, false}]}]}
]}.
